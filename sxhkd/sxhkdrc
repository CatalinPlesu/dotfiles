# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

## security
super + x
	xsecurelock -- xset dpms force off

## open terminal
super + Return
	$TERMINAL -e tmux new-session -A -s main
super + t; Return
	$TERMINAL	
super + t; t
	$TERMINAL -e tmux new-session -A -s main

## open terminal apps
super + t; e
    $TERMINAL -e nvim
super + t; n
    $TERMINAL -e note
super + t; N
    $TERMINAL -e now
super + t; m
    $TERMINAL -e ncmpcpp
super + t; r
    $TERMINAL -e ranger
super + t; h
    $TERMINAL -e htop

## apps 
super + b
	$BROWSER
super + o; f
    thunar
super + o; z
    zathura
super + o ; m
	mpv av://v4l2:/dev/video0 --profile=low-latency --untimed -vf=hflip


### screenshot
super + p
	scrot -z '%d-%B-%Y-{%T}.png' -e 'xclip -selection clipboard -t "image/png" -i $n && mkdir -p ~/Pictures/Screenshots/%Y/%B/%d/ && mv $f ~/Pictures/Screenshots/%Y/%B/%d/'
super + P
	scrot -zs '%d-%B-%Y-{%T}.png' -e 'xclip -selection clipboard -t "image/png" -i $n && mkdir -p ~/Pictures/Screenshots/%Y/%B/%d/ && mv $f ~/Pictures/Screenshots/%Y/%B/%d/'
super + ctrl + p
	flameshot gui
Print
	scrot -z '%d-%B-%Y-{%T}.png' -e 'xclip -selection clipboard -t "image/png" -i $n && mkdir -p ~/Pictures/Screenshots/%Y/%B/%d/ && mv $f ~/Pictures/Screenshots/%Y/%B/%d/'
Print + alt ; {1-9}
	scrot -z -d {1-9}'%d-%B-%Y-{%T}.png' -e 'xclip -selection clipboard -t "image/png" -i $n && mkdir -p ~/Pictures/Screenshots/%Y/%B/%d/ && mv $f ~/Pictures/Screenshots/%Y/%B/%d/'
ctrl + Print
	scrot -zs '%d-%B-%Y-{%T}.png' -e 'xclip -selection clipboard -t "image/png" -i $n && mkdir -p ~/Pictures/Screenshots/%Y/%B/%d/ && mv $f ~/Pictures/Screenshots/%Y/%B/%d/'
shift + Print
	flameshot gui

# rofi things
super + d
	rofi -show combi 
super + r; c
	rofi -show calc -theme dmenu | xclip -selection clipboard
super + r; e
	rofi -modi 'run,drun,emoji:/home/catalin/.config/rofi/rofiemoji.sh' -show emoji  -matching glob

# Change wallpaper
super + r ; w
	nitrogen --set-zoom-fill --random ~/Pictures/wallpapers
# Change theme
super + r ; t
	switch

# change bar
super + control + b
    ~/.config/dwmblocks/switch_bar.sh

super + f ; h
	pcmanfm 
super + f ; b
	pcmanfm Books
super + f ; s
	pcmanfm Sync
super + f ; d
	pcmanfm Downloads
super + f ; c
	pcmanfm code
super + f ; D
	pcmanfm Documents
super + f ; p
	pcmanfm Pictures
super + f ; w
	pcmanfm Pictures/wallpapers/
super + f ; v
	pcmanfm Videos
super + f ; m
	pcmanfm Music
super + f ; u
	pcmanfm UTM/ii_an/iv_sem/

super + u
	find -L ~/UTM/ii_an/iv_sem/ -type d | rofi -dmenu | xargs --no-run-if-empty thunar 
super + U
    book=$(find ~/UTM -type f -name '*.pdf' | rofi -dmenu -i) && zathura $book
super + n
    book=$(find ~/Books -type f | rofi -dmenu -i) && zathura $book

### audio
XF86AudioRaiseVolume
	vol.sh up	
XF86AudioLowerVolume
	vol.sh down
XF86AudioMute
	vol.sh mute
XF86AudioMicMute
	amixer -D pulse sset Capture toggle
super + v: j
	vol.sh down 
super + v: k
	vol.sh up 
super + v: m
	vol.sh mute
super + v: g
	vol.sh max
super + v: G
	vol.sh min
super + v: l
	brightness.sh +15
super + v: h
	brightness.sh -15
super + v: q
	pkill -USR1 -x sxhkd

### mpd
super + m; space
    mpc toggle
super + m; p
    mpc pause
super + m; P
    mpc play
super + m; n
    mpc next
super + m; N
    mpc prev
super + m; j
    mpc volume -5
super + m; J
    mpc volume 30
super + m; k
    mpc volume +5
super + m; K
    mpc volume 100

### Brightness
XF86MonBrightnessUp
	brightness.sh +5
XF86MonBrightnessDown
	brightness.sh -5

### keyboard language 
super + r; 1
	setxkbmap us
super + r; 2
	setxkbmap ro std
super + r; 3
	setxkbmap ru
super + s
    xdotool key Caps_Lock

## #screenkey
super + r; s
    killall screenkey
super + r; S
    screenkey --scr 1

### insert romanian diacritics
## [ă
alt + bracketleft; bracketleft 
    xdotool keyup bracketleft key --clearmodifiers abreve
## ]î
alt + bracketright; bracketright 
    xdotool keyup bracketright key --clearmodifiers icircumflex 
## \â
alt + backslash; backslash  
    xdotool keyup backslash key --clearmodifiers acircumflex 
## ;ș
alt + apostrophe; apostrophe 
    xdotool keyup apostrophe key --clearmodifiers U021B
## 'ț
alt + semicolon; semicolon 
    xdotool keyup semicolon key --clearmodifiers U0219
