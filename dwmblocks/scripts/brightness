#!/bin/sh

black='#282828'
black0='#7c6f64'
red='#cc241d'
red0='#fb4934'
green='#98971a'
green0='#b8bb26'
yellow='#d79921'
yellow0='#fabd2f'
blue='#458588'
blue0='#83a598'
purple='#b16286'
purple0='#d3869b'
aqua='#689d6a'
aqua0='#8ec07c'
white='#a89984'
white0='#fbf1c7'
fg(){
    echo "^c$1^"
}
bg(){
    echo "^b$1^"
}

brightness=$(cat /sys/class/backlight/amdgpu_bl0/brightness)
brightness=$(( $brightness * 100 / 255 ))
printf "$(fg $black)$(bg $yellow)[%.f ðŸ”†]\n" $brightness
